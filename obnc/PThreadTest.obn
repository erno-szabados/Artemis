MODULE PThreadTest;

IMPORT Tests, artPThread, Out, Clock := artClock, SYSTEM;

TYPE
    ThreadContext = POINTER TO ThreadContextDesc;
    ThreadContextDesc = RECORD
        ran: BOOLEAN
    END;

VAR
    ts: Tests.TestSet;

PROCEDURE TestSleep(): BOOLEAN;
VAR pass : BOOLEAN;
    c : Clock.Clock;
BEGIN
    pass := TRUE;
    NEW(c);
    Clock.Get(c);
    Out.String("  TestSleep (s):"); Out.Int(c.minute, 0); Out.String(":"); Out.Int(c.second, 0); Out.Ln;
    
    Out.String("Sleeping for 2 seconds..."); Out.Ln;
    (* Simple test: Sleep should not crash and should take some time *)
    artPThread.Sleep(2000); 
    
    Clock.Get(c);
    Out.String("  TestSleep (s):"); Out.Int(c.minute, 0); Out.String(":"); Out.Int(c.second, 0); Out.Ln;
    
    (* Test with zero - should not crash *)
    artPThread.Sleep(0);
    
    (* Test with negative - should not crash *)
    artPThread.Sleep(-1);
    
    (* This test primarily checks if the call can be made without crashing *)
    Tests.ExpectedBool(TRUE, TRUE, "Sleep function calls completed", pass);
    RETURN pass
END TestSleep;

PROCEDURE TestMutex(): BOOLEAN;
VAR pass: BOOLEAN;
    mutex: artPThread.Mutex;
    result: INTEGER;
BEGIN
    pass := TRUE;
    Out.String("  TestMutex...");
    
    (* Test mutex creation *)
    mutex := artPThread.NewMutex();
    Tests.ExpectedBool(FALSE, mutex = NIL, "Mutex creation should succeed", pass);
    
    IF mutex # NIL THEN
        (* Test locking *)
        result := artPThread.Lock(mutex);
        Tests.ExpectedInt(artPThread.Ok, result, "Mutex lock should succeed", pass);
        
        (* Test unlocking *)
        result := artPThread.Unlock(mutex);
        Tests.ExpectedInt(artPThread.Ok, result, "Mutex unlock should succeed", pass);
        
        (* Test double lock/unlock *)
        result := artPThread.Lock(mutex);
        Tests.ExpectedInt(artPThread.Ok, result, "Second mutex lock should succeed", pass);
        
        result := artPThread.Unlock(mutex);
        Tests.ExpectedInt(artPThread.Ok, result, "Second mutex unlock should succeed", pass);
        
        (* Test TryLock on unlocked mutex *)
        result := artPThread.TryLock(mutex);
        Tests.ExpectedInt(artPThread.Ok, result, "TryLock should succeed on unlocked mutex", pass);

        (* Test TryLock on already locked mutex *)
        result := artPThread.TryLock(mutex);
        Tests.ExpectedInt(artPThread.Busy, result, "TryLock should fail on already locked mutex", pass);

        (* Unlock for cleanup *)
        result := artPThread.Unlock(mutex);
        Tests.ExpectedInt(artPThread.Ok, result, "Unlock after TryLock should succeed", pass);
        
        (* Clean up *)
        artPThread.FreeMutex(mutex);
        Tests.ExpectedBool(TRUE, mutex = NIL, "Mutex should be NIL after FreeMutex", pass)
    END;
    
    IF pass THEN Out.String(" OK") ELSE Out.String(" FAILED") END; Out.Ln;
    RETURN pass
END TestMutex;

PROCEDURE TestCondVar(): BOOLEAN;
VAR pass: BOOLEAN;
    cv: artPThread.CondVar;
BEGIN
    pass := TRUE;
    Out.String("  TestCondVar...");
    
    (* Test condvar creation *)
    cv := artPThread.NewCondVar();
    Tests.ExpectedBool(FALSE, cv = NIL, "CondVar creation should succeed", pass);
    
    IF cv # NIL THEN
        (* Clean up *)
        artPThread.FreeCondVar(cv);
        Tests.ExpectedBool(TRUE, cv = NIL, "CondVar should be NIL after FreeCondVar", pass)
    END;
    
    IF pass THEN Out.String(" OK") ELSE Out.String(" FAILED") END; Out.Ln;
    RETURN pass
END TestCondVar;

PROCEDURE TestCondVarWaitSignal(): BOOLEAN;
VAR pass: BOOLEAN;
    mutex: artPThread.Mutex;
    cv: artPThread.CondVar;
    ok: INTEGER;
    signaled: BOOLEAN;
BEGIN
    pass := TRUE;
    Out.String("  TestCondVarWaitSignal...");
    
    mutex := artPThread.NewMutex();
    cv := artPThread.NewCondVar();
    signaled := FALSE;
    
    IF (mutex # NIL) & (cv # NIL) THEN
        ok := artPThread.Lock(mutex);
        Tests.ExpectedInt(artPThread.Ok, ok, "Lock before wait should succeed", pass);
        
        (* In a real test, another thread would Signal. Here, we just check that Wait returns 1 if signaled. *)
        (* This is a placeholder for a real concurrent test. *)
        ok := artPThread.Signal(cv);
        Tests.ExpectedInt(artPThread.Ok, ok, "Signal should succeed", pass);
        
        ok := artPThread.Wait(cv, mutex);
        Tests.ExpectedInt(artPThread.Ok, ok, "Wait should succeed (no real wait)", pass);
        
        ok := artPThread.Unlock(mutex);
        Tests.ExpectedInt(artPThread.Ok, ok, "Unlock after wait should succeed", pass);
        
        artPThread.FreeCondVar(cv);
        artPThread.FreeMutex(mutex);
    ELSE
        pass := FALSE;
    END;
    
    IF pass THEN Out.String(" OK") ELSE Out.String(" FAILED") END; Out.Ln;
    RETURN pass
END TestCondVarWaitSignal;


PROCEDURE ThreadProc(context: INTEGER): INTEGER;
VAR ctx: ThreadContext;
BEGIN
    ctx := SYSTEM.VAL(ThreadContext, context);
    IF ctx # NIL THEN
        ctx.ran := TRUE;
    END;
    RETURN 0
END ThreadProc;

PROCEDURE TestThread(): BOOLEAN;
VAR pass: BOOLEAN;
    t: artPThread.Thread;
    ctx: ThreadContext;
    ok: INTEGER;
BEGIN
    NEW(ctx);
    ctx.ran := FALSE;
    pass := TRUE;
    Out.String("  TestThread...");
    t := artPThread.NewThread(ThreadProc, SYSTEM.VAL(INTEGER, ctx));
    Tests.ExpectedBool(FALSE, t = NIL, "Thread creation should succeed", pass);
    IF t # NIL THEN
        ok := artPThread.Join(t);
        Tests.ExpectedInt(artPThread.Ok, ok, "Thread join should succeed", pass);
        Tests.ExpectedBool(TRUE, ctx.ran, "Thread procedure should set context field", pass)
    END;
    IF pass THEN Out.String(" OK") ELSE Out.String(" FAILED") END; Out.Ln;
    RETURN pass
END TestThread;

BEGIN
    Tests.Init(ts, "artPThread");
    Out.String("Running artPThread Tests..."); Out.Ln;
    
    Tests.Add(ts, TestSleep);
    Tests.Add(ts, TestMutex);
    Tests.Add(ts, TestCondVar);
    (* This test hangs without threads - disabled for now. *)
    (* Tests.Add(ts, TestCondVarWaitSignal); *)
    Tests.Add(ts, TestThread);
    
    ASSERT(Tests.Run(ts));
    Out.String("artPThread Tests Completed."); Out.Ln;
END PThreadTest.
